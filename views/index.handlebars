<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center" id="top-bar">
      <img src="/assets/images/burger.png">
      <h1> Eat-Da-Burger! </h1>
    </div>
    <div class="col-xs-6 text-center" class="task">
      <div class="row">
        {{#each burgers}} {{#unless this.devoured}}
        <div class="col-xs-9 text-center">
          <pre> {{this.id}}. {{this.name}} </pre>
        </div>
        <div class="col-xs-3 text-center">
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST" class="button-size">
            <input type="hidden" name="devoured" value="true" type="test">
            <br>
            <button class="btn btn-default" type="submit"> Devour it ! </button>
          </form>
        </div>
        {{/unless}} {{/each}}
      </div>
    </div>
    <div class="col-xs-6 text-center" class="task">
      {{#each burgers}} {{#if this.devoured}}
      <input class="form-control" type="text" placeholder="{{this.id}}. {{this.name}}" readonly> {{/if}} {{/each}}
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
      <form class="create-update-form" action="burgers/create" method="POST">
        <input type="text" name="name" class="form-control" value="" id="enter-text">
        <button type="submit" class="btn btn-primary" id=" text-enter-button">Submit</button>
      </form>
      <p>Add a burger you like.</p>
    </div>
  </div>
</div>